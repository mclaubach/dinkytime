// Custom hook pattern
export function useMyEngine() {
  const engineRef = useRef<MyEngine | null>(null);
  
  useEffect(() => {
    engineRef.current = new MyEngine();
    engineRef.current.init();
    return () => engineRef.current?.cleanup();
  }, []);
  
  return engineRef.current;
}

